<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="SimonRadford.Site"
                   namespace="SimonRadford.Site.Models">

  <class name="Submitter">
    <id name="UserId">
      <generator class="identity" />
    </id>
    <property name="Name" />
    <bag name="Reviews">
      <key column="UserID" />
      <one-to-many
        class="Review" />
    </bag>
  </class>

</hibernate-mapping>